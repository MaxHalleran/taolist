<% if(cookie.user_id){ %>
<div class="accordion" id="accordionLists">
    <% userLists.forEach(function(list, index) { %>
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapseOne">
                        <%= list.name %>
                    </button>
                </h5>
            </div>
            <div id="collapse<%= index %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordionLists">
                <div class="card-body">
                    <ol>
                        <% itemList.forEach(function(item){ %>
                            <% if(item.list_id == list.list_id){ %>
                            <li> <%= item.name %></li>
                        <% }}) %>
                    </ol>
                </div>
            </div>
        </div>
        <% }) %>
   
</div>
<% } %>
