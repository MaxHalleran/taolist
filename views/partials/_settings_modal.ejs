<div class="modal fade" id="settingsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Settings</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form action="/api/user" method="post">
        <fieldset>

          <legend>List Special</legend>

          <input type="text" id="listid" name="listid">
          <label for="listid">List id</label><br/>
          <input type="submit" class="btn btn-primary modal-settings-get-list" value="Get single list">

          <input type="submit" class="btn btn-primary modal-settings-get-multiple-list" value="Get multiple lists">

        </fieldset>

        <fieldset>

          <legend>Item Special</legend>

          <input type="text" class="itemid" name="itemid">
          <input type="text" class="listid" name="listid">
          <label for="listid">Item id</label><br/>
          <input type="submit" class="btn btn-primary modal-settings-get-item" value="get an item and it's description">

          <input type="submit" class="btn btn-primary modal-settings-make-item" value="make an item in a list">

        </fieldset>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary modal-login-button" value="Save Changes">
      </div>
    </form>
    </div>
  </div>
</div>
</div>
